{
  "productName": "ruby",
  "version": "0.1.0",
  "identifier": "com.ruby-ui.desktop",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build:prod",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ruby",
        "width": 1024,
        "height": 768,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true
      }
    }
  }
}
